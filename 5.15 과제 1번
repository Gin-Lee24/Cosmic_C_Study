#define _CRT_SECURE_NO_WARNINGS
#include <math.h>
#include <stdio.h>
int convert_ten(char* n, int base)
{
	int size = strlen(n);
	int num = 0;
	char arr[1000];
	for (int i = 0; i < size - 1; i++)
	{
		num += n[i] * pow(base, i);
	}
	
	return num;
}

